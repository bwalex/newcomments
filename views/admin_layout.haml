!!!
%html
  %head
    %meta(charset="utf-8")
    %title
      Comments
    %link(href="/assets/stylesheets/normalize.css" rel="stylesheet" type="text/css")
    %link(href="/assets/stylesheets/dataTables.foundation.css" rel="stylesheet" type="text/css")
    %link(href="/assets/stylesheets/style.css" rel="stylesheet" type="text/css")
    %script{ :src => "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"}
    %script{ :src => "//cdnjs.cloudflare.com/ajax/libs/datatables/1.9.4/jquery.dataTables.min.js"}
    %script{ :src => "/assets/js/foundation/foundation.js"}
    %script{ :src => "/assets/js/foundation/foundation.tab.js"}
    %script{ :src => "/assets/js/vendor/dataTables.foundation.js"}
  %body
    %header
      %nav.top-bar
        %ul.title-area
          %li.name
            %h1
              %a{ :href => "/" }
                Comments
        %section.top-bar-section
          %ul.right
            %li{ :class => (menu_sel == "sites") ? "active" : "" }
              %a{ :href => "/admin/sites"} Sites
            %li{ :class => (menu_sel == "global") ? "active" : "" }
              %a{ :href => "/admin/global"} Settings
            %li{ :class => (menu_sel == "account") ? "active" : "" }
              %a{ :href => "/admin/account"} Account
            %li
              %a{ :href => "/logout"} Logout

    %section#content
      = yield
    %footer
    :javascript
      $(document).foundation();
